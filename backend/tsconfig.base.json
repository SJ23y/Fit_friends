{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@backend/authentication": ["libs/account/authentication/src/index.ts"],
      "@backend/data-access": ["libs/shared/data-access/src/index.ts"],
      "@backend/file-manager": ["libs/file-manager/src/index.ts"],
      "@backend/file-manager-config": ["libs/file-manager/config/src/index.ts"],
      "@backend/friends": ["libs/account/friends/src/index.ts"],
      "@backend/messages-broker": [
        "libs/messages/messages-broker/src/index.ts"
      ],
      "@backend/messages-config": ["libs/messages/config/src/index.ts"],
      "@backend/messages-email": ["libs/messages/messages-email/src/index.ts"],
      "@backend/shared-core": ["libs/shared/core/src/index.ts"],
      "@backend/shared-guards": ["libs/shared/guards/src/index.ts"],
      "@backend/shared-helpers": ["libs/shared/helpers/src/index.ts"],
      "@backend/shared-pipes": ["libs/shared/pipes/src/index.ts"],
      "@backend/subscription": ["libs/messages/subscription/src/index.ts"],
      "@backend/training": ["libs/training/training/src/index.ts"],
      "@backend/training-purchase": ["libs/training/purchase/src/index.ts"],
      "@backend/training-review": ["libs/training/review/src/index.ts"],
      "@backend/trainingRequest": ["libs/account/request/src/index.ts"],
      "@backend/user": ["libs/account/user/src/index.ts"],
      "@backend/user-balance": ["libs/account/balance/src/index.ts"],
      "@backend/user-config": ["libs/account/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
